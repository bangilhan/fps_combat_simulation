{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "routes": [
    { "src": "/$", "dest": "/index.html", "headers": { "cache-control": "no-cache, no-store, must-revalidate" } },
    { "src": "/index.html", "dest": "/index.html", "headers": { "cache-control": "no-cache, no-store, must-revalidate" } }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    }
  ]
}


